# Hadoop home (correct for BDE images)
HADOOP_HOME=/usr/local/hadoop
PATH=$PATH:$HADOOP_HOME/bin:$HADOOP_HOME/sbin

# Core Hadoop configuration
CORE_CONF_fs_defaultFS=hdfs://namenode:9000

# YARN configuration
YARN_CONF_yarn_resourcemanager_hostname=resourcemanager

# MapReduce environment
MAPRED_CONF_mapreduce_framework_name=yarn
MAPRED_CONF_yarn_app_mapreduce_am_env=HADOOP_MAPRED_HOME=/usr/local/hadoop
MAPRED_CONF_mapreduce_map_env=HADOOP_MAPRED_HOME=/usr/local/hadoop
MAPRED_CONF_mapreduce_reduce_env=HADOOP_MAPRED_HOME=/usr/local/hadoop
